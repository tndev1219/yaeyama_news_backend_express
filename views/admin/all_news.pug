extends template/layout.pug

block content
 .m-content
    .m-portlet.m-portlet--mobile
      .m-portlet__head
        .m-portlet__head-caption
          .m-portlet__head-title
            h3.m-portlet__head-text
              | ファイル一覧
      .m-portlet__body
        .m-form.m-form--label-align-right.m--margin-top-20.m--margin-bottom-30
          .row.align-items-center
            .col-xl-8.order-2.order-xl-1
              .form-group.m-form__group.row.align-items-center
                .col-md-4
                  .m-input-icon.m-input-icon--left
                    input#eventSearch.form-control.m-input.m-input--solid(type='text' placeholder='検索...')
                    span.m-input-icon__icon.m-input-icon__icon--left
                      span
                        i.la.la-search
            .col-xl-4.order-3.order-xl-5.m--align-right
              a#btn_new_app.btn.btn-accent.m-btn.m-btn--custom.m-btn--icon.m-btn--air.m-btn--pill(href='/upload_news')
                span
                  i.la.la-upload
                  span
                    | PDFアップロード
                  .m-separator.m-separator--dashed.d-xl-none
        .m_data_events#m-datatable

        #m_modal_5.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true', style='top:20%')
          .modal-dialog.modal-sm(role='document')
            .modal-content
              .modal-header
                h5#exampleModalLabel.modal-title
                  | 削除
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true')
                    | &times;
              .modal-body
                form
                  label.form-control-label(for='message-text')
                    | このファイルを本当に削除しますか？
              .modal-footer
                button.btn.btn-primary.m-modal-btn-delete(type='button', data-dismiss='modal')
                  | はい
                button.btn.btn-secondary(type='button', data-dismiss='modal')
                  | いいえ

block data_script
  script(src='/admin/js/all_news.js' type='text/javascript')
